@model IEnumerable<DBMSWebApp.Models.Table>

@{
    ViewData["Title"] = "Index";
}

<h1>Tables</h1>

<p>
    <a asp-action="Create" asp-route-databaseId="@ViewBag.DatabaseId">Create New Table </a>
    <a asp-action="Join" asp-route-databaseId="@ViewBag.DatabaseId">Join Tables </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Database)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Database.Name)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
